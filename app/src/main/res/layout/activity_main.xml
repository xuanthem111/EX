<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/bacground"
    tools:context=".mvvm.view.MainActivity">

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/no_smoking"/>
    <TextView
        android:text="USERNAME"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:textColor="#FFEB3B"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp" />

    <EditText
        android:id="@+id/edt_TK"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:inputType="textEmailAddress"
        android:backgroundTint="@color/white"
        android:padding="25dp"
        android:hint="username"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <TextView
        android:text="PASSWORD"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:textColor="#FFEB3B"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp" />

    <EditText
        android:id="@+id/edt_MK"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/white"
        android:padding="25dp"
        android:hint="password"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_forgot"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"/>

    <Button
        android:id="@+id/btn_dangnhap"
        android:text="GET STARTING"
        android:layout_marginTop="18dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/bogoc_vang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_dangky"
        android:text="Not registered? Create Account"
        android:layout_marginTop="40dp"
        android:textAllCaps="false"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>